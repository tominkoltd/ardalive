{
	"name": "ardalive",
	"displayName": "ArdaLive",
	"publisher": "tominkoltd",
	"description": "Lightning-fast HTML live preview for VS Code (with CSS/INCLUDES hot-swap).",
	"keywords": [
		"live preview",
		"html preview",
		"css hot-reload",
		"html live reload",
		"web server",
		"static server",
		"morphdom",
		"vscode live server",
		"web development",
		"live web preview"
	],
	"version": "1.2.1",
	"engines": {
		"vscode": "^1.101.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./extension.js",
	"icon": "static/img/ardalive-icon-128.png",
	"files": [
		"extension.js",
		"static/**",
		"README.md",
		"LICENSE",
		"CHANGELOG.md",
		"package.json",
		"node_modules/ws/**"
	],
	"contributes": {
		"configuration": {
			"title": "ArdaLive",
			"properties": {
				"ardaLive.port": {
					"type": "number",
					"default": 8242,
					"scope": "resource",
					"description": "Preferred HTTP port for this workspace."
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/vscode": "^1.101.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.25.1"
	},
	"dependencies": {
		"ws": "^8.18.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tominkoltd/ardalive.git"
	},
	"homepage": "https://github.com/tominkoltd/ardalive",
	"bugs": {
		"url": "https://github.com/tominkoltd/ardalive/issues"
	}
}