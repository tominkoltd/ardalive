{
  "name": "ardalive",
  "displayName": "ArdaLive",
  "publisher": "tominko",
  "description": "HTML / CSS live preview",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "files": [
    "static"
  ],
  "contributes": {
    "configuration": {
      "title": "ArdaLive",
      "properties": {
        "ardaLive.port": {
          "type": "number",
          "default": 8242,
          "scope": "resource",
          "description": "Preferred HTTP port for this workspace."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
